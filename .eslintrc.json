{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["*.js"]
    }],
    "no-param-reassign": ["error", {
      "props": true,
      "ignorePropertyModificationsFor": ["acc"]
    }],
    "max-len": ["error", {
      "code": 100,
      "ignorePattern": "d=\"([\\s\\S]*?)\""
    }],
    "no-console": ["error", {
      "allow": ["info", "warn", "error", "group", "groupEnd"]
    }]
  }
}
