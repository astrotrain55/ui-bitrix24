{
  "name": "vue-bitrix24",
  "description": "Promise-wrapper for JavaScript REST API Bitrix24, a Bitrix24 style library of components and a set of new methods",
  "version": "0.1.1",
  "license": "GPL",
  "private": false,
  "type": "module",
  "module": "./lib/index.js",
  "main": "./lib/index.umd.cjs",
  "exports": {
    "./css": "./lib/style.css",
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.umd.cjs"
    }
  },
  "homepage": "https://astrotrain55.github.io/vue-bitrix24/",
  "repository": {
    "type": "git",
    "url": "git@github.com:astrotrain55/vue-bitrix24.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "vue",
    "api",
    "rest",
    "promises",
    "components",
    "bitrix24",
    "bx24"
  ],
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build:lib": "vite build --config vite.config.lib.js",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "public:lib": "npm run build:lib && npm publish",
    "public": "npm run build && node gh-pages.js"
  },
  "dependencies": {
    "gh-pages": "^4.0.0",
    "is-mobile": "^3.1.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.1",
    "eslint": "^8.21.0",
    "eslint-plugin-vue": "^9.3.0",
    "stylus": "^0.59.0",
    "vite": "^3.0.4"
  }
}
